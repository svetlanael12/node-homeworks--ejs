<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesccription">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesccription"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthors">Автор</label>
        <input type="text"
               value="<%= book.authors %>"
               name="authors"
               class="form-control"
               id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputFavorite">Нравится</label>
        <input type="checkbox"
                <% if (book.favorite) { %> checked <% }; %>
               name="favorite"
               id="inputFavorite">
    </div>

    <div class="form-group">
        <label for="inputfileCover">Обложка</label>
        <input type="text"
               value="<%= book.fileCover %>"
               name="fileCover"
               class="form-control"
               id="inputfileCover">
    </div>

    <div class="form-group">
        <label for="inputfileName">Название файла</label>
        <input type="text"
               value="<%= book.fileName %>"
               name="fileName"
               class="form-control"
               id="inputfileName">
    </div>

    <div class="form-group">
        <label for="inputfileBook">Файл</label>
        <input type="file"
               name="fileBook"
               id="inputfileBook">
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>